Function CreateReconfigGTK
    Push $4

    FileOpen $4 "$INSTDIR\GTK\bin\reconfig.bat" w
    FileWrite $4 "@echo off$\r$\n"
    FileWrite $4 "Set INSTDIR=$INSTDIR$\r$\n"
    FileWrite $4 "set PATH=%INSTDIR%\GTK\bin;%INSTDIR%\GTK\lib;%PATH%$\r$\n"
    FileWrite $4 '"$INSTDIR\GTK\bin\gdk-pixbuf-query-loaders.exe" > "$INSTDIR\GTK\etc\gtk-2.0\gdk-pixbuf.loaders"$\r$\n'
    FileWrite $4 '"$INSTDIR\GTK\bin\gtk-query-immodules-2.0.exe" > "$INSTDIR\GTK\etc\gtk-2.0\gtk.immodules"$\r$\n'
    FileWrite $4 '"$INSTDIR\GTK\bin\pango-querymodules.exe" > "$INSTDIR\GTK\etc\pango\pango.modules"$\r$\n'
    FileClose $4 	

    Pop $4
FunctionEnd


