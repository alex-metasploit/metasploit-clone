Name "${PRODUCT_NAME} ${PRODUCT_VERSION}"
OutFile "framework-3.2.exe"
InstallDir "$PROGRAMFILES\Metasploit\Framework3"
ShowInstDetails show
ShowUnInstDetails show

Section "MainSection" SecCore
        SetOutPath $INSTDIR
	Call SetEnv
       File /r "C:\Dev\Framework3\*.*"
SectionEnd

Section "GTK" SecGTK
	Call CreateReconfigGTK
	Call ReconfigGTK
SectionEnd

Section "Nmap" SecNmap
	MessageBox MB_YESNO \
		"Would you like to install the Nmap Security Scanner v4.76? Nmap is a free and open source \
		utility for network exploration and security auditing. The Metasploit \
		Framework is able to work with Nmap to provide exploit automation features. \
		Nmap is copyright (C) 1996-2008 Insecure.Com LLC. Nmap is a registered \
		trademark of Insecure.Com LLC. Nmap is included in this installer with \
		the permission of the Nmap Project. Nmap is provided under the GNU Public License, \
		not the BSD license which covers most of the Metasploit Framework" /SD IDYES IDNO endNmap

	ExecWait '"$INSTDIR\tools\nmap-4.76-setup.exe"' 
	endNmap:
	Delete "$INSTDIR\tools\nmap-4.76-setup.exe"
SectionEnd

Section "Registry" SecReg
	Exec 'regedt32 /S "$INSTDIR\tools\nmap_performance.reg"' 
	Delete "$INSTDIR\tools\nmap_performance.reg" 
SectionEnd 


